<section class="py-3" id="features">
	<div class="container px-5 my-5 rounded shadow-sm bg-purple">
		<div class="row gx-5">
			{{#if loggedIn}}
			<div class="col-lg-4 mb-5 mb-lg-0">
				<!--left column -->
				<h2 class="fw-bolder mb-3">Neighborhood Posts</h2>
				<p>Pick a date range to see posts within a range</p>

				<div class="fw-bolder mb-3"> <input type="text" id="from_post_date" placeholder="From Date"
						autocomplete="off" /></div>
				<div class="fw-bolder mb-3"> <input type="text" id="to_post_date" placeholder="To Date"
						autocomplete="off" /></div>
				<div class="text-left">
					<a class="btn btn-primary text-light" id="viewPostButton">View Posts</a>
				</div>
			</div>

			{{/if}}
			<div class="col-lg-8">
				<!--event card container-->
				<div class="row gx-6  justify-content-between" id="postsContainer">


					{{#if loggedIn}}
					{{#each posts}}

					<div class="d-flex text-muted pt-3">

						<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="#dcae1d"
							class="bi bi-signpost-2-fill flex-shrink-0 me-2 rounded " viewBox="0 0 16 16">
							<path
								d="M7.293.707A1 1 0 0 0 7 1.414V2H2a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h5v1H2.5a1 1 0 0 0-.8.4L.725 8.7a.5.5 0 0 0 0 .6l.975 1.3a1 1 0 0 0 .8.4H7v5h2v-5h5a1 1 0 0 0 1-1V8a1 1 0 0 0-1-1H9V6h4.5a1 1 0 0 0 .8-.4l.975-1.3a.5.5 0 0 0 0-.6L14.3 2.4a1 1 0 0 0-.8-.4H9v-.586A1 1 0 0 0 7.293.707z" />
						</svg><a href="/post/{{id}}" style="text-decoration: none;">
							<div class="pb-3 mb-0 small lh-sm border-bottom w-100">
								<div class="d-flex justify-content-between align-items-center">
									<p>
										<strong class="text-primary fw-bold">{{title}}</strong>
									</p>


								</div>
								<div class="text-dark-gray fw-bold">{{post_details}}</div>
								<div>&nbsp;</div>
								<div class="d-block text-warning fw-bold">By {{user.first_name}}
									&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{format_date
									created_at}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{comment_count}} comment(s)</div>
							</div>
						</a>
					</div>

					{{/each}}
					{{/if}}

				</div>
			</div>
		</div>
	</div>
</section>





