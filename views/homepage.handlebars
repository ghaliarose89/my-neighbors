<!-- Header-->
<div class="heroContainer">
	<header class="hero py-5">
		<div class="container px-5">
			<div class="row gx-5 align-items-center justify-content-center">
				<div class="col-lg-8 col-xl-7 col-xxl-6">
					<div class="my-5 text-center text-xl-start">
						<h1 class="display-5 fw-bolder text-white mb-2 " id="welcome_msg_holder">Welcome To The
							Neighborhood!
						</h1>
					</div>
				</div>

				{{! login-form }}
				<div class="col-xl-5 col-xxl-6 d-xl-block text-center">
					<div class="col-md-7">
						<div class="card-body loginDiv">
							{{#if loggedIn}}
							<input type ="hidden" id="neighborhood_id_hidden" value={{neighborhood_id}}>
							{{else}}
							<p class="lead fw-bold mb-4 login-card-description">Sign in to
								View Community Posts </p>
							{{! <p class="">Sign into your account</p> }}
							<form action="#!">
								<div class="form-group">
									<label for="email" class="sr-only">Email</label>
									<input type="email" name="email" id="email" class="form-control"
										placeholder="Email address" onfocus="" />
								</div>
								<div class="form-group mb-4">
									<label for="password" class="sr-only">Password</label>
									<input type="password" name="password" id="password" class="form-control"
										placeholder="***********" />
								</div>
								<input name="login" id="login" class="btn btn-block login-btn mb-4" type="button"
									value="Login" />
							</form>
							<div id='errMsg' style="font-weight:bold;color:red"></div>
							<p class="login-card-footer-text">Don't have an account?
								<a href="/signup" class="text-reset">Register here</a>
							</p>
							{{/if}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
</div>

<section class="py-3" id="features">
	<div class="container px-5 my-5">
		<div class="row gx-5">
			<div class="col-lg-4 mb-5 mb-lg-0">
				<h2 class="fw-bolder mb-0">Neighborhood Events</h2>
			</div>
			<div class="col-lg-8">
				<!--event card container-->
				<div class="row gx-5 row-cols-1 row-cols-md-2 justify-content-between" id="eventCardContainer">


				</div>
			</div>
		</div>
	</div>
</section>



